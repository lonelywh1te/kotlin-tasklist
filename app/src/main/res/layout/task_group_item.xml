<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/taskCard"
        style="@style/Widget.App.CardView.TaskGroup"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/ic_task_group"
                app:tint="?attr/ktDefaultIconColor" />

            <TextView
                android:id="@+id/tvTaskGroupName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="15dp"
                android:gravity="center|start"
                android:textColor="?attr/ktSecondaryTextColor"
                tools:text="TaskGroup Name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/ic_open"
                app:tint="?attr/ktDefaultIconColor" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
