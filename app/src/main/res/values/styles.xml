<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
    <style name="Widget.App.CardView.Task">
        <item name="android:backgroundTint">?attr/ktTaskColor</item>
    </style>
    <style name="Widget.App.CardView.TaskGroup">
        <item name="android:backgroundTint">?attr/ktTaskGroupColor</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">?attr/ktDefaultIconColor</item>
        <item name="elevation">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.FloatingActionButton</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.FloatingActionButton" parent="ShapeAppearanceOverlay.MaterialComponents.FloatingActionButton">
        <item name="cornerSize">30%</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">?attr/ktBottomBarBackgroundColor</item>
        <item name="itemIconTint">?attr/ktBottomBarForegroundColor</item>
        <item name="itemTextColor">?attr/ktBottomBarForegroundColor</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.App.Regular.Small</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.App.Bold.Small</item>
    </style>

    <style name="Widget.App.ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.App.Bold.Huge</item>
        <item name="titleTextColor">?attr/ktToolBarForegroundColor</item>
    </style>

    <style name="Widget.App.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.App.Regular</item>
    </style>
    <style name="Widget.App.TextView.TaskAttribute">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:alpha">0.3</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.App.Regular</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/shape_action_btn</item>
        <item name="backgroundTint">?attr/ktDefaultButtonColor</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Regular</item>
    </style>

    <style name="Widget.App.Button.Submit">
        <item name="backgroundTint">?attr/ktSubmitButtonColor</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox"/>
</resources>